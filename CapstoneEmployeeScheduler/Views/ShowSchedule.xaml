<Window x:Class="CapstoneEmployeeScheduler.Views.ShowSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapstoneEmployeeScheduler.Views"
        mc:Ignorable="d"
        Title="Schedule" Height="499.16" Width="623.53">
    <Grid Margin="0,0,-8,0">
        <ListView HorizontalAlignment="Left" Name="showTheSchedule" Height="448" Margin="10,10,0,0" VerticalAlignment="Top" Width="591">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Employee" Width="300" DisplayMemberBinding= "{Binding }"/>
                    <GridViewColumn Header="Shift" Width="300" DisplayMemberBinding= "{Binding }"/>
                    <GridViewColumn Header="Role" Width="300" DisplayMemberBinding= "{Binding }"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>



</Window>
