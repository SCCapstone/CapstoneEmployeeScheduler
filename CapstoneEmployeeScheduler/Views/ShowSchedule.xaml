<Page x:Class="CapstoneEmployeeScheduler.Views.ShowSchedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapstoneEmployeeScheduler"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="ShowSchedule" MinHeight="750" MinWidth="1000">
    <Grid x:Name="Page" Margin="0,-10,0,10.4">

        <Grid>
            <DataGrid Name="schedule" ItemsSource ="{Binding Schedule}" AutoGenerateColumns="True">
             
            </DataGrid>
            <Button x:Name="PrintEButton" Content="Print Schedule" HorizontalAlignment="Left" VerticalAlignment="Top" Width="208" Margin="451,624,0,0" FontWeight="Bold" Background="#FFDDDDDD" Height="68" FontSize="22" Click="PrintSButton_Click"/>
            
        </Grid>
    </Grid>

</Page>
