<Page x:Class="CapstoneEmployeeScheduler.Views.Employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapstoneEmployeeScheduler"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="Employees" MinHeight="750" MinWidth="1000">
    <Grid x:Name="Page" Background="#FFB9B9B9" Margin="0,-10,0,10.4">

        <Grid>
            <Grid Background="#FF84C8FF" Margin="0,0,0,0">
               

                    <Label x:Name="Title" Content="Company Employees" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="336,64,0,0" Width="401" Height="78" Background="#FF84C8FF" FontWeight="Bold" FontSize="36" BorderThickness="0" SnapsToDevicePixels="True"/>
                    <Button x:Name="NewEmployee" Content="New Employee" HorizontalAlignment="Left" VerticalAlignment="Top" Width="207" Margin="709,602,0,0" FontWeight="Bold" Background="#FFDDDDDD" Height="68" FontSize="24" Click="NewEmployee_Click"/>

                    <ListView Margin="235,213,104,187" Name="Users">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding UserName}" />
                                <GridViewColumn Header="Email" Width="300" DisplayMemberBinding="{Binding Email}" />
                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>
            </Grid>
        </Grid>
   
</Page>
