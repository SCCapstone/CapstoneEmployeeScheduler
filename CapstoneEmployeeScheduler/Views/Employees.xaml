<Page x:Class="CapstoneEmployeeScheduler.Views.Employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapstoneEmployeeScheduler"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="Employees" MinHeight="750" MinWidth="1000">

    <Grid>
        <Grid Background="#FFB9B9B9" Margin="0,0,0,0">
            <Label x:Name="Title" Content="Company Employees" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="288,70,0,0" Width="401" Height="78" Background="#FF84C8FF" FontWeight="Bold" FontSize="36" BorderThickness="0" SnapsToDevicePixels="True"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="328" VerticalAlignment="Top" Width="886" Margin="30,174,0,0" Background="#FF84C8FF"/>
            <Label Content="Employee list will be added here with button to edit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,228,0,0" Width="886" FontSize="24" FontWeight="Bold"/>
            <Button x:Name="NewEmployee" Content="New Employee" HorizontalAlignment="Left" VerticalAlignment="Top" Width="207" Margin="709,546,0,0" FontWeight="Bold" Background="#FFDDDDDD" Height="68" FontSize="24" Click="NewEmployee_Click"/>
        </Grid>
    </Grid>
</Page>
